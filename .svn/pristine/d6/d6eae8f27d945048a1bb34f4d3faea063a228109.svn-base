<div fxLayout="column" fxFlex style="background-color: white;border-radius:5px;background-image:url(assets/Intranet-Icons/bg22.png);" class="appreciation">
  <div fxLayout="row" fxFlex>
    <div fxLayout="column" fxFlex>
      <div fxLayout="row" fxLayoutAlign="space-between" fxLayoutGap.xs="2px" style="padding-bottom:10px;border-bottom:1px solid lavender">
        <div fxLayoutAlign="center center" class="searchbox">
          <input aria-label="search" placeholder="Search" (keyup.enter)='searchNewJoinees()' [(ngModel)]="joinees.search" type="search"
            style="border:none;background-color: #ebebeb;">
          <img [src]="'assets/Intranet-Icons/search.svg'" width="18" height="18" (click)="searchNewJoinees()">
        </div>
